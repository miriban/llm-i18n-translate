{
  "name": "llm-i18n-translate",
  "version": "1.0.0",
  "description": "Automatically compare and translate missing i18n keys using llms",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "auto-i18n-translate": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node bin/cli.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "[i18n",
    "translation",
    "openai",
    "cli",
    "localization",
    "gemini",
    "llm]"
  ],
  "author": "Mohammed Abuiriban",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.3.0",
    "deep-diff": "^1.0.2",
    "dotenv": "^16.5.0",
    "find-up": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/deep-diff": "^1.0.5",
    "@types/node": "^22.15.29",
    "@vitest/ui": "^3.2.1",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^3.2.1"
  }
}
